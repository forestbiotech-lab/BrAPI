extends layout

block content
  .card
    .row.no-gutters
      .col.bg-dark.text-white(style="max-width:50px")
        h2.rotate(style="left:-40px") Program&nbsp;&nbsp;
      .col
        .card-header 
          h3.card-title #{trialData.program.name}
        .card-body.p-0
          .p-2  
            p Lead person: 
              a(href=`https://orcid.org/${trialData.program.lead_person.orcid}`,target="_blank") 
                strong #{trialData.program.lead_person.name}
            p Affiliated institution: 
              if locationAdditionalInfo
                if locationAdditionalInfo.URL 
                  a(href=locationAdditionalInfo.URL,target="_blank" )
                    strong #{studyData.program.lead_person.institution.name} 
                if locationAdditionalInfo.EMAIL 
                  span 
                    a(href="mailto:"+locationAdditionalInfo.EMAIL) âœ‰ 
                if locationAdditionalInfo.PHONE
                  span #{locationAdditionalInfo.PHONE}
              else
                strong #{trialData.program.lead_person.institution.name} 
            p Objective: 
              strong #{trialData.program.objective}    
          .card
            .row.no-gutters
              .col.bg-dark.text-white(style="max-width:50px")
                h2.rotate &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Trial&nbsp;&nbsp;
              .col
                .card-header
                  h3.card-title #{trialData.name}
                .card-body.p-0
                  .p-2
                    p From: 
                      strong #{trialData.startDate}   
                      span until:  
                      strong #{trialData.startDate}